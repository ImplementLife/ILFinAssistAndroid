<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ILFinAssistAndroid.ImageButton">
        <item name="android:padding">3dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ILFinAssistAndroid.ImageButton.Small">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="Theme.ILFinAssistAndroid.ImageButton.Middle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="Theme.ILFinAssistAndroid.ImageButton.Large">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Theme.ILFinAssistAndroid.Card">
        <item name="android:background">@drawable/sh_round_rectangle</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Theme.ILFinAssistAndroid.GridItem">
        <item name="android:background">@drawable/sh_round_rectangle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.ILFinAssistAndroid.GridItem.MainMenu">
    </style>

    <style name="Theme.ILFinAssistAndroid.GridItem.CategoryItem">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Theme.ILFinAssistAndroid.TextViewDefault">
        <item name="android:text">@string/blank</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>